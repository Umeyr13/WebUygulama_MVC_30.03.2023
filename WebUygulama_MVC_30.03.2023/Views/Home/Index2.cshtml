
@{
    Layout = null;
}

@{ string isim="İki süslü parantez arasında c#kodu yazılabilir";
        
   string soyisim = " @ işareti ile sayfaya gelir";
    string birleşim = isim + soyisim ;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index2</title>
</head>
<body>
    <div>
        <!-- razor sintax teknolojisi-->
        <b> @isim </b>
        <br />
        <b> @soyisim </b>
        <br />
        <b> @birleşim</b>
        <br />
        <b> @( isim + soyisim)</b>
    </div>

    <div>
        @{ string deger = "1234";

            <b> @deger </b>

            string[] isimler = new string[] { "Umeyr", "Özgür", "Yakup", "Emre" };
            int index = 0;
            <ul>
                @foreach (var item in isimler)
                {

                    <li>
                        @if (index % 2 == 0)
                        {
                            <b> @item    </b>

                        }
                        else
                        {
                            <i> @item </i>
                        }
                    </li>

                    index++;
                }


            </ul>

        }

        <b>@deger</b>
    </div>

    <hr />

    @for (int i = 0; i < 10; i++)
    {
        @("Sayı:" +i);
        <br />

    }
    @for (int i = 0; i < 10; i++)
    {
        <b>Sayı: @i</b>
    }

</body>
</html>
